<div class="container mt-5">
    <div class="card text-center">
        <div class="card-header">
            Add Survey
        </div>
        <div class="card-body">

            @if (!isReady)
            {
                <p>Loading...</p>
            }
            else
            {
                <EditForm Model="model" OnValidSubmit="SaveSurvey">
                    <DataAnnotationsValidator />
                   
                    <div class="form-group row">
                        <div class="col-6">
                            <label class="bs-form-label" for="surveyName">Survey Name</label>
                            <InputText id="surveyName" class="form-control" @bind-Value="@model.SurveyName" />
                            <ValidationMessage For="@(() => model.SurveyName)" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-6">
                            <label class="bs-form-label" for="surveyDescription">Description</label>
                            <InputText id="surveyDescription" class="form-control" @bind-Value="@model.Description" />
                            <ValidationMessage For="@(() => model.Description)" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label class="bs-form-label" for="surveyQuestion">Survey Question</label>
                            <InputText id="surveyQuestion" class="form-control" @bind-Value="@model.SurveyQuestion" />
                            <ValidationMessage For="@(() => model.SurveyQuestion)" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label class="bs-form-label" for="surveyOptions">Survey Options</label>

                            <select class="form-control" id="surveyOptions" @onchange="UpdateOptionSelection">
                                @foreach (var option in model.SurveyOptions)
                                {
                                    <option value="@option.Value">@option.Text</option>
                                }
                            </select>
                            <ValidationMessage For="@(() => model.SurveyOptionsToAdd)"/>
                        </div>
                        <div class="col-4 d-flex flex-row align-items-end mb-1">
                            <input type="button" class="btn btn-sm btn-primary mr-2" value="Add Option" @onclick="AddOption" />
                            @if (model.ShowDeleteOption)
                            {
                                <input type="button" class="btn btn-sm btn-danger" value="Delete Option" @onclick="@(() => DeleteOption(SelectedOption))" />
                            }

                        </div>
                    </div>
                    <div class="form-group form-check row">
                        <div class="col-6">
                            <InputCheckbox @bind-Value="@model.FeaturedSurvey" /> <label class="form-check-label">Featured Survey</label>
                        </div>

                    </div>

                    <div class="form-group row my-3 ml-3">
                        <div class="col-6">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="button" class="btn btn-danger" value="Cancel" @onclick="CancelAdd" />
                        </div>

                    </div>

                </EditForm>
            }

        </div>
        <div class="card-footer text-muted">
            <p></p>
        </div>
    </div>


</div>


